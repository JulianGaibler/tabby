{
    "name": "tabby",
    "version": "1.0.1",
    "private": true,
    "scripts": {
        "dev": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "@fluent/bundle": "^0.15.1",
        "core-js": "^3.6.5",
        "debounce": "^1.2.0",
        "fluent-vue": "^2.4.5",
        "fuse.js": "^6.0.3",
        "he": "^1.2.0",
        "vue": "^2.6.11",
        "vue-i18n": "^8.18.1"
    },
    "devDependencies": {
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@vue/cli-plugin-babel": "~4.4.0",
        "@vue/cli-plugin-eslint": "~4.4.0",
        "@vue/cli-service": "~4.4.0",
        "babel-eslint": "^10.1.0",
        "copy-webpack-plugin": "^6.0.2",
        "eslint": "^6.7.2",
        "eslint-plugin-vue": "^6.2.2",
        "raw-loader": "^4.0.1",
        "stylus": "^0.54.7",
        "stylus-loader": "^3.0.2",
        "vue-cli-plugin-svg": "^0.1.3",
        "vue-template-compiler": "^2.6.11",
        "yaml-loader": "^0.6.0"
    },
    "babel": {
        "plugins": [
            "@babel/plugin-syntax-dynamic-import"
        ]
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "parserOptions": {
            "parser": "babel-eslint",
            "allowImportExportEverywhere": true
        },
        "rules": {
            "vue/html-indent": [
                "error",
                2
            ],
            "vue/max-attributes-per-line": [
                "error",
                {
                    "singleline": 3
                }
            ],
            "no-console": 0,
            "indent": [
                "error",
                2
            ],
            "semi": [
                "error",
                "never"
            ],
            "quotes": [
                "error",
                "single",
                {
                    "allowTemplateLiterals": true
                }
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "no-var": [
                "error"
            ],
            "arrow-spacing": [
                "error"
            ],
            "object-curly-spacing": [
                "error",
                "always"
            ],
            "func-call-spacing": [
                "error",
                "never"
            ]
        },
        "globals": {
            "browser": "readonly",
            "chrome": "readonly"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}
